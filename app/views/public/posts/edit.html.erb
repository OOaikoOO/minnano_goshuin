<h1>編集画面</h1>

<%= form_with model: @post, url: post_path(@post), method: :patch do |f| %>
  <%= render 'public/shared/error_messages', resource: f.object %>

  <div>
    <h4>タイトル</h4>
    <%= f.text_field :title %>
  </div>
  
  <div>
    <h4>所在地</h4>
    <%= f.text_area :address %>
  </div>
  
  <div><%= f.submit '更新' %></div>
  
<% end %>