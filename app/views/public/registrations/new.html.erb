<%= stylesheet_link_tag 'sign_up' %>
<div class="form-container">
  <div class="registration-form fade-in-from-top">
    <h2 class="text-center">新規会員登録</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { id: "registration-form", novalidate: true }) do |f| %>

      <!-- ユーザー名 -->
      <div class="mb-3">
        <%= f.label :"ユーザー名", class: "form-label" %>
        <%= f.text_field :name, class: "form-control",
          placeholder: "例）はなこさん", required: true,
          pattern: "[^\s]+",
          title: "スペース以外の文字を入力してください" %>
        <div class="invalid-feedback">
          ユーザー名を入力してください。
        </div>
      </div>

      <!-- メールアドレス -->
      <div class="mb-3">
        <%= f.label :"メールアドレス", class: "form-label" %>
        <%= f.email_field :email, class: "form-control",
          placeholder: "例）goshuin@xxx.com", required: true %>
        <div class="invalid-feedback">
          有効なメールアドレスを入力してください。
        </div>
      </div>

      <!-- パスワード -->
      <div class="mb-3">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, class: "form-control",
          placeholder: "6文字以上で入力してください", required: true,
          pattern: ".{6,}", title: "6文字以上のパスワードを入力してください" %>
        <div class="invalid-feedback">
          パスワードを入力してください。
        </div>
      </div>

      <!-- パスワード確認 -->
      <div class="mb-3">
        <%= f.label :password_confirmation, class: "form-label" %>
        <%= f.password_field :password_confirmation, class: "form-control",
          placeholder: "再度入力してください", required: true,
          pattern: ".{6,}", title: "6文字以上のパスワードを入力してください" %>
        <div class="invalid-feedback">
          パスワードを再度入力してください。
        </div>
      </div>

        <!-- プライバシーポリシーチェックボックス
        <div class="form-check mb-3">
          <input type="checkbox" class="form-check-input" id="privacy_policy" required>
          <label class="form-check-label" for="privacy_policy">
            <a href="/privacy-policy" target="_blank">プライバシーポリシー</a>に同意します
          </label>
          <div class="invalid-feedback">
            プライバシーポリシーに同意する必要があります。
          </div>
        </div> -->

        <!-- 新規登録ボタン -->
        <div class="d-grid">
          <%= f.submit "新規登録", class: "btn submit-btn" %>
        </div>
      <% end %>
      <%= render "public/shared/links" %>
    </div>
  </div>

  <!-- バリテーション -->
  <script>
    (function () {
      'use strict';
      var form = document.getElementById('registration-form');
      form.addEventListener('submit', function (event) {
        if (!form.checkValidity()) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    })();
  </script>