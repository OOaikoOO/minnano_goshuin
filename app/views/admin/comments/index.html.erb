<h1>コメント一覧</h1>
<% if @comments.present? %>
  <ul>
    <% @comments.each do |comment| %>
      <li>
        <%= comment.comment %>
        <%= link_to "削除", admin_user_comment_path(comment.user_id, comment), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>コメントがありません</p>
<% end %>

<%= link_to "ユーザー情報詳細に戻る", admin_user_path(@user), class: "btn btn-primary" %>