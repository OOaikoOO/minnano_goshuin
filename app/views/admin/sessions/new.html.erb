<%= stylesheet_link_tag 'admin_sign_in' %>
<div class="container">
  <div class="admin-login-form">
    <h2 class="text-center">管理者ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { id: "admin-login-form", novalidate: true }) do |f| %>

      <div class="mb-3">
        <%= f.label :"メールアドレス", class: "form-label" %>
        <%= f.email_field :email, autofocus: true,
          autocomplete: "email", class: "form-control",
          placeholder: "例）goshuin@example.com", required: true %>
        <div class="invalid-feedback">
          有効なメールアドレスを入力してください。
        </div>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password",
          class: "form-control", placeholder: "6文字以上で入力してください", required: true %>
        <div class="invalid-feedback">
          パスワードを入力してください。
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-check mb-3">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, "ログイン状態を保持する", class: "form-check-label" %>
        </div>
      <% end %>

      <div class="d-grid">
        <%= f.submit "ログイン", class: "btn submit-btn" %>
      </div>
    <% end %>
  </div>
</div>

<script>
  // JavaScriptでバリデーションを設定
  (function () {
    'use strict';
    var form = document.getElementById('admin-login-form');
    form.addEventListener('submit', function (event) {
      if (!form.checkValidity()) {
        event.preventDefault();
        event.stopPropagation();
      }
      form.classList.add('was-validated');
    }, false);
  })();
</script>
