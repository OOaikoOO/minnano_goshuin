<!--管理者用検索フォーム-->

<div class="search_form row g-3 justify-content-end">
  <div class="col-auto">
    <%= form_with url: admin_search_path, method: :get, local: true, class: "d-flex" do |f| %>
      <%= f.text_field :content, class: "form-control", placeholder: "検索キーワード" %>
      <%= f.select :model, options_for_select({"ユーザー名"=>"user", "投稿"=>"post", "コメント"=>"comment"}), {}, class: "form-select" %>
      <%= f.submit "検索", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
