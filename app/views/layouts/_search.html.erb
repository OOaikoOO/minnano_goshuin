<div class="search_form">
  <% if admin_signed_in? %>
    <%= form_with url: admin_search_path, local: true, method: :get do |f| %>
      <%= f.text_field :word %>
      <%= f.select :range, options_for_select(["ユーザー名", "神社仏閣の名前", "コメント"]) %>
      <%= f.submit "検索" %>
    <% end %>
  <% else %>
    <%= form_with url: search_path, local: true, method: :get do |f| %>
      <%= f.text_field :word %>
      <%= f.select :range, options_for_select(["ユーザー名", "神社仏閣の名前", "所在地"]) %>
      <%= f.submit "検索" %>
    <% end %>
  <% end %>
</div>